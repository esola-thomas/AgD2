---
import Base from '../layouts/Base.astro';
import Seo from '../components/Seo.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Offerings from '../components/Offerings.astro';
import Panel from '../components/Panel.astro';
import Fees from '../components/Fees.astro';
import Team from '../components/Team.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

const title = 'AgD2 Advisors - Making AgTech Startups Investor-Ready';
const description = 'Expert advisory services for AgTech and AgBio startups. We bridge the gap from early-stage innovation to VC-backed growth with pitch decks, commercial strategy, regulatory guidance, and more.';
---

<Base title={title} description={description}>
  <Seo slot="seo" title={title} description={description} />
  
  <Header />
  <main>
    <Hero />
    <Offerings />
    <Panel />
    <Fees />
    <Team />
    <Contact />
  </main>
  <Footer />
</Base>
