<section id="team" class="section bg-ag-cream">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-ag-ink mb-6">
        Industry Veterans Join Forces
      </h2>
      <p class="text-xl text-ag-muted max-w-3xl mx-auto">
        Industry veterans who become an extension of your team. We don't stand back—we work shoulder-to-shoulder until the job is done.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {team.map(member => (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
          <div class="bg-gradient-to-r from-ag-primary to-ag-primary-600 p-6">
            <div class="flex items-center space-x-4">
              <div class="w-20 h-20 rounded-full overflow-hidden bg-white flex-shrink-0">
                <img 
                  src={`${import.meta.env.BASE_URL}${member.image}`} 
                  alt={member.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="flex-1">
                <h3 class="text-2xl font-display font-bold text-white mb-1">
                  {member.name}
                </h3>
                <p class="text-ag-accent font-semibold">
                  {member.title}
                </p>
                <p class="text-white/80 text-sm">
                  {member.specialty}
                </p>
              </div>
            </div>
          </div>

          <div class="p-6">
            <p class="text-ag-muted mb-4">
              {member.bio}
            </p>

            <details class="group">
              <summary class="cursor-pointer text-ag-primary font-semibold hover:text-ag-primary-600 transition-colors flex items-center justify-between">
                <span>View Full CV</span>
                <svg class="w-5 h-5 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>

              <div class="mt-4 pt-4 border-t border-ag-cream space-y-4">
                <div>
                  <h4 class="font-display font-bold text-ag-ink mb-2">Education</h4>
                  <ul class="space-y-1 text-sm text-ag-muted">
                    {member.education.map(edu => (
                      <li class="flex items-start">
                        <span class="text-ag-primary mr-2">•</span>
                        <span>{edu}</span>
                      </li>
                    ))}
                  </ul>
                </div>

                <div>
                  <h4 class="font-display font-bold text-ag-ink mb-2">Experience Highlights</h4>
                  <ul class="space-y-1 text-sm text-ag-muted">
                    {member.experience.map(exp => (
                      <li class="flex items-start">
                        <span class="text-ag-primary mr-2">•</span>
                        <span>{exp}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </details>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
