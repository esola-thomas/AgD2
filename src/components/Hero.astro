<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    <img src={`${import.meta.env.BASE_URL}hero-bg.png`} alt="" class="w-full h-full object-cover" />
  </div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left">
        <p class="text-ag-primary font-semibold text-lg mb-4">You are: A Startup</p>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-ag-ink mb-6 leading-tight">
          AgD2: Here to Bridge Your Innovation
        </h1>
        <p class="text-ag-primary-600 font-display text-2xl md:text-3xl mb-6">
          The Team That Will Get You Across the Bridge!!!
        </p>
        <p class="text-lg md:text-xl text-ag-muted mb-8 max-w-prose">
          Transitioning from an early-stage venture to an <strong class="text-ag-ink">INVESTABLE</strong> company with traction is CRITICAL for all startups. 
          We help AgTech & AgBio startups become investor-readyâ€”from early promise to VC-backed growth.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#offerings" class="btn btn-primary">
            What We Deliver
          </a>
          <a href="#contact" class="btn btn-outline">
            Get Started
          </a>
        </div>
      </div>

      <!-- Visual -->
      <div class="flex justify-center">
        <img src={`${import.meta.env.BASE_URL}bridge.png`} alt="Bridge visualization showing the path from early stage to VC-backed growth" class="w-full max-w-lg" />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-ag-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
